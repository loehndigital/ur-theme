{% stylesheet %}
.section-product-highlight {
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: 1140px;
  margin: 0 auto;
  margin-bottom: 24px;
  padding: var(--padding-vertical, 20px) 24px;
  border-radius: 12px;
  background-color: {{ section.settings.background_color }};
}
.product-highlight-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.highlight-content {
  flex: 1;
}
.highlight-content h3 {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 8px;
}
.highlight-content summary {
  font-weight: bold;
  cursor: pointer;
  list-style: none;
}
.highlight-content details[open] summary svg {
  transform: rotate(180deg);
}
.highlight-content summary svg {
  height: 12px;
  margin-left: 6px;
  vertical-align: middle;
}
.text-light .highlight-content,
.text-light h3,
.text-light summary {
  color: #ffffff;
}
.text-dark .highlight-content,
.text-dark h3,
.text-dark summary {
  color: #000000;
}
.highlight-image img {
  max-height: 100px;
  border-radius: 8px;
}
@media (max-width: 768px) {
  .product-highlight-inner {
    flex-direction: column;
    text-align: center;
  }
  .highlight-image {
    margin-top: 12px;
  }
}
{% endstylesheet %}

{% assign layout_class = 'highlight-left' %}
{% if section.settings.image_position == 'right' %}
  {% assign layout_class = 'highlight-right' %}
{% endif %}

{% assign text_class = 'text-dark' %}
{% if section.settings.text_color_mode == 'light' %}
  {% assign text_class = 'text-light' %}
{% endif %}

<div class="section-product-highlight {{ layout_class }} {{ text_class }}">
  <div class="product-highlight-inner">
    <div class="highlight-content">
      <h3>{{ section.settings.product_title }}</h3>
      <details>
        <summary>Mehr erfahren
          <svg viewBox="0 0 20 20"><path d="M5.7 7.5L10 12.5l4.3-5z" fill="currentColor" /></svg>
        </summary>
        <p>{{ section.settings.product_description }}</p>
      </details>
    </div>
    {% if section.settings.product_image %}
      <div class="highlight-image">
        <img src="{{ section.settings.product_image | img_url: 'medium' }}" alt="{{ section.settings.product_title }}">
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "UR Produktbalken",
  "tag": "section",
  "class": "section section-product-highlight-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "product_title",
      "label": "Sortenname",
      "default": "Produktname hier eingeben"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Sortenbeschreibung",
      "default": "Beschreibungstext hier einfügen"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Produktbild"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Bildposition",
      "default": "right",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "right", "label": "Rechts" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe (Sortenfarbe)",
      "default": "#E4D199"
    },
    {
      "type": "select",
      "id": "text_color_mode",
      "label": "Textfarbe",
      "default": "light",
      "options": [
        { "value": "light", "label": "Hell (weiß)" },
        { "value": "dark", "label": "Dunkel (schwarz)" }
      ]
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Innenabstand (oben/unten)",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "UR Produktbalken",
      "category": "Uncle Rusty's"
    }
  ]
}
{% endschema %}