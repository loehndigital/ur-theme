{% schema %}
{
  "name": "UR Produktbalken",
  "settings": [
    {
      "type": "text",
      "id": "product_title",
      "label": "Sortenname"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Sortenbeschreibung"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Produktbild"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Bildposition",
      "default": "right",
      "options": [
        { "label": "Links", "value": "left" },
        { "label": "Rechts", "value": "right" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe",
      "default": "#f6f6f6"
    },
    {
      "type": "select",
      "id": "text_color_mode",
      "label": "Textfarbe",
      "default": "light",
      "options": [
        { "label": "Hell (wei√ü)", "value": "light" },
        { "label": "Dunkel (schwarz)", "value": "dark" }
      ]
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Innenabstand oben/unten",
      "default": 24
    }
  ],
  "presets": [
    {
      "name": "UR Produktbalken",
      "category": "Uncle Rusty's"
    }
  ]
}
{% endschema %}

<style>
  .section-product-highlight {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    border-radius: 20px;
    margin-bottom: 24px;
    padding-left: 24px;
    padding-right: 24px;
  }

  .product-highlight-inner {
    display: flex;
    gap: 16px;
    width: 100%;
  }

  .highlight-left {
    flex-direction: row-reverse;
  }

  .highlight-right {
    flex-direction: row;
  }

  .highlight-content {
    flex: 1;
  }

  .highlight-image {
    max-width: 120px;
  }

  .highlight-image img {
    max-height: 120px;
    border-radius: 8px;
  }

  .text-light .highlight-content h3,
  .text-light .highlight-content summary {
    color: #fff;
  }

  .text-dark .highlight-content h3,
  .text-dark .highlight-content summary {
    color: #000;
  }

  summary {
    cursor: pointer;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 4px;
  }

  summary svg {
    height: 12px;
    width: 12px;
    transition: transform 0.3s ease;
  }

  details[open] summary svg {
    transform: rotate(180deg);
  }

  @media (max-width: 768px) {
    .section-product-highlight {
      flex-direction: column;
      text-align: center;
    }

    .product-highlight-inner {
      flex-direction: column;
      align-items: center;
    }

    .highlight-image {
      margin-top: 16px;
    }
  }
</style>

{% assign layout_class = '' %}
{% if section.settings.image_position == 'left' %}
  {% assign layout_class = 'highlight-left' %}
{% else %}
  {% assign layout_class = 'highlight-right' %}
{% endif %}

{% assign text_class = '' %}
{% if section.settings.text_color_mode == 'light' %}
  {% assign text_class = 'text-light' %}
{% else %}
  {% assign text_class = 'text-dark' %}
{% endif %}

<div class="page-width">
  <div
    class="section-product-highlight {{ layout_class }} {{ text_class }}"
    style="background-color: {{ section.settings.background_color }}; padding-top: {{ section.settings.padding_vertical }}px; padding-bottom: {{ section.settings.padding_vertical }}px;"
  >
    <div class="product-highlight-inner">
      <div class="highlight-content">
        <h3>{{ section.settings.product_title }}</h3>
        <details>
          <summary>
            Mehr erfahren
            <svg viewBox="0 0 20 20" fill="currentColor">
              <path d="M5.7 7.5L10 12.5l4.3-5H5.7z"/>
            </svg>
          </summary>
          <p>{{ section.settings.product_description }}</p>
        </details>
      </div>

      {% if section.settings.product_image %}
        <div class="highlight-image">
          <img
            src="{{ section.settings.product_image | img_url: 'medium' }}"
            alt="{{ section.settings.product_title }}"
          >
        </div>
      {% endif %}
    </div>
  </div>
</div>