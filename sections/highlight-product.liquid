
{% schema %}
{
  "name": "UR Produktbalken",
  "tag": "section",
  "class": "section section-product-highlight",
  "settings": [
    {
      "type": "text",
      "id": "product_title",
      "label": "Sortenname"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Sortenbeschreibung"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Produktbild"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Bildposition",
      "default": "right",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "right", "label": "Rechts" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe (Sortenfarbe)",
      "default": "#f5f5f5"
    },
    {
      "type": "select",
      "id": "text_color_mode",
      "label": "Textfarbe",
      "default": "light",
      "options": [
        { "value": "light", "label": "Hell (weiß)" },
        { "value": "dark", "label": "Dunkel (schwarz)" }
      ]
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Innenabstand (oben/unten)",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "UR Produktbalken"
    }
  ]
}
{% endschema %}

<style>
  .text-light .highlight-content,
  .text-light h3,
  .text-light summary {
    color: #fff;
  }

  .text-dark .highlight-content,
  .text-dark h3,
  .text-dark summary {
    color: #000;
  }

  .highlight-image img {
    max-height: 100px;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .product-highlight-inner {
      flex-direction: column;
      text-align: center;
    }

    .highlight-image {
      margin-top: 12px;
    }
  }

  summary {
    cursor: pointer;
    font-weight: bold;
    margin-bottom: 8px;
  }

  details[open] summary:after {
    content: "▲";
    margin-left: 6px;
  }

  details summary:after {
    content: "▼";
    margin-left: 6px;
  }
</style>

{% assign layout_class = section.settings.image_position %}
{% assign text_class = section.settings.text_color_mode %}

<div class="section-product-highlight {{ layout_class }} {% if text_class == 'light' %}text-light{% else %}text-dark{% endif %}"
     style="background-color: {{ section.settings.background_color }}; padding-top: {{ section.settings.padding_vertical }}px; padding-bottom: {{ section.settings.padding_vertical }}px;">
  <div class="product-highlight-inner">
    <div class="highlight-content">
      <h3>{{ section.settings.product_title }}</h3>
      <details>
        <summary>Mehr erfahren</summary>
        <p>{{ section.settings.product_description }}</p>
      </details>
    </div>
    {% if section.settings.product_image %}
      <div class="highlight-image">
        <img src="{{ section.settings.product_image | img_url: 'medium' }}" alt="{{ section.settings.product_title }}">
      </div>
    {% endif %}
  </div>
</div>
