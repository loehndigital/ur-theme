{% schema %}
{
  "name": "UR Produktbalken",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "product_title",
      "label": "Sortenname",
      "default": "Produktname hier eingeben"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Sortenbeschreibung",
      "default": "Beschreibungstext hier einfügen"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Produktbild"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Bildposition",
      "default": "right",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "right", "label": "Rechts" }
      ]
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe (Sortenfarbe)",
      "default": "#D6B36F"
    },
    {
      "type": "select",
      "id": "text_color_mode",
      "label": "Textfarbe",
      "default": "light",
      "options": [
        { "value": "light", "label": "Hell (weiß)" },
        { "value": "dark", "label": "Dunkel (schwarz)" }
      ]
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Innenabstand (oben/unten)",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "UR Produktbalken"
    }
  ]
}
{% endschema %}

{% style %}
.section-product-highlight {
  max-width: 1140px;
  margin: 0 auto;
  padding: 0 20px;
}
.product-highlight-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: {{ section.settings.background_color }};
  padding-top: {{ section.settings.padding_vertical }}px;
  padding-bottom: {{ section.settings.padding_vertical }}px;
  border-radius: 16px;
  gap: 32px;
}
.product-highlight-inner.text-light {
  color: #fff;
}
.product-highlight-inner.text-dark {
  color: #000;
}
.highlight-content {
  flex: 1;
}
.highlight-image img {
  max-height: 100px;
  border-radius: 8px;
}
@media (max-width: 768px) {
  .product-highlight-box {
    flex-direction: column !important;
    text-align: center;
  }
  .highlight-image img {
    margin-top: 16px;
  }
}
{% endstyle %}

{% assign layout_class = section.settings.image_position %}
{% assign text_class = section.settings.text_color_mode %}

<div class="section-product-highlight">
  <div class="product-highlight-box">
    <div class="product-highlight-inner {% if text_class == 'light' %}text-light{% else %}text-dark{% endif %} {% if layout_class == 'left' %}highlight-left{% else %}highlight-right{% endif %}">
      <div class="highlight-content">
        <h3>{{ section.settings.product_title }}</h3>
        <details>
          <summary>
            Mehr erfahren
            <svg width="20" height="20" viewBox="0 0 20 20"><path d="M5.2 7.5L10 12.3l4.8-4.8" stroke="currentColor" stroke-width="1.5" fill="none" stroke-linecap="round"/></svg>
          </summary>
          <p>{{ section.settings.product_description }}</p>
        </details>
      </div>
      {% if section.settings.product_image %}
        <div class="highlight-image">
          <img src="{{ section.settings.product_image | img_url: 'medium' }}" alt="{{ section.settings.product_title }}">
        </div>
      {% endif %}
    </div>
  </div>
</div>