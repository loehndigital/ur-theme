{% schema %}
{
  "name": "UR Produktbalken",
  "tag": "section",
  "class": "section-product-highlight",
  "settings": [
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Produktbild"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Bildposition",
      "default": "right",
      "options": [
        { "label": "Links", "value": "left" },
        { "label": "Rechts", "value": "right" }
      ]
    },
    {
      "type": "text",
      "id": "product_title",
      "label": "Sortenname",
      "default": "Produktname hier eingeben"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Sortenbeschreibung",
      "default": "Beschreibungstext hier einfügen"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe (Sortenfarbe)",
      "default": "#D95B27"
    },
    {
      "type": "select",
      "id": "text_color_mode",
      "label": "Textfarbe",
      "default": "light",
      "options": [
        { "label": "Hell (weiß)", "value": "light" },
        { "label": "Dunkel (schwarz)", "value": "dark" }
      ]
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "label": "Außenabstand (oben/unten)",
      "min": 0,
      "max": 80,
      "step": 1,
      "unit": "px",
      "default": 30
    }
  ],
  "presets": [
    {
      "name": "UR Produktbalken",
      "category": "Uncle Rusty's"
    }
  ]
}
{% endschema %}

{% style %}
  .section-product-highlight {
    background-color: {{ section.settings.background_color }};
    padding-top: {{ section.settings.padding_vertical | default: 30 }}px;
    padding-bottom: {{ section.settings.padding_vertical | default: 30 }}px;
  }

  .highlight-container {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    gap: 20px;
    align-items: center;
    justify-content: space-between;
    flex-direction: {% if section.settings.image_position == 'left' %}row-reverse{% else %}row{% endif %};
    border-radius: 16px;
    padding: 24px;
  }

  .highlight-content {
    flex: 1;
  }

  .highlight-content h3 {
    margin: 0 0 10px;
    font-size: 20px;
    font-weight: 700;
  }

  .highlight-content details summary {
    cursor: pointer;
    font-weight: bold;
    margin-bottom: 6px;
  }

  .highlight-content details[open] summary::after {
    content: "▲";
    margin-left: 6px;
  }

  .highlight-content summary::after {
    content: "▼";
    margin-left: 6px;
  }

  .text-light .highlight-content,
  .text-light h3,
  .text-light summary {
    color: #fff;
  }

  .text-dark .highlight-content,
  .text-dark h3,
  .text-dark summary {
    color: #000;
  }

  .highlight-image img {
    max-height: 160px;
    width: auto;
    border-radius: 10px;
  }

  @media (max-width: 768px) {
    .highlight-container {
      flex-direction: column;
      text-align: center;
    }

    .highlight-image img {
      margin-top: 16px;
    }
  }
{% endstyle %}

<div class="highlight-container {% if section.settings.text_color_mode == 'light' %}text-light{% else %}text-dark{% endif %}">
  <div class="highlight-content">
    <h3>{{ section.settings.product_title }}</h3>
    <details>
      <summary>Mehr erfahren</summary>
      <p>{{ section.settings.product_description }}</p>
    </details>
  </div>
  {% if section.settings.product_image %}
    <div class="highlight-image">
      <img src="{{ section.settings.product_image | image_url: width: 300 }}" alt="{{ section.settings.product_title }}">
    </div>
  {% endif %}
</div>