{% schema %}
{
  "name": "UR Produktbalken",
  "tag": "section",
  "class": "section-product-highlight-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "product_title",
      "label": "Sortenname",
      "default": "Produktname hier eingeben"
    },
    {
      "type": "textarea",
      "id": "product_description",
      "label": "Sortenbeschreibung",
      "default": "Beschreibungstext hier einfügen"
    },
    {
      "type": "image_picker",
      "id": "product_image",
      "label": "Produktbild"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Bildposition",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "right", "label": "Rechts" }
      ],
      "default": "right"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe (Sortenfarbe)",
      "default": "#D5B827"
    },
    {
      "type": "select",
      "id": "text_color_mode",
      "label": "Textfarbe",
      "options": [
        { "value": "light", "label": "Hell (weiß)" },
        { "value": "dark", "label": "Dunkel (schwarz)" }
      ],
      "default": "light"
    },
    {
      "type": "range",
      "id": "padding_vertical",
      "min": 10,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Innenabstand (oben/unten)",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "UR Produktbalken"
    }
  ]
}
{% endschema %}

{% style %}
.section-product-highlight {
  max-width: 1160px;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 18px;
  padding-left: 24px;
  padding-right: 24px;
  gap: 20px;
  box-sizing: border-box;
}

.highlight-container {
  display: flex;
  width: 100%;
  padding-top: {{ section.settings.padding_vertical | default: 40 }}px;
  padding-bottom: {{ section.settings.padding_vertical | default: 40 }}px;
  border-radius: 18px;
}

.highlight-left .section-product-highlight {
  flex-direction: row-reverse;
}

.highlight-right .section-product-highlight {
  flex-direction: row;
}

.highlight-content {
  flex: 1;
}

.highlight-content h3 {
  font-size: 20px;
  font-weight: 700;
  margin-bottom: 6px;
}

.highlight-content details summary {
  font-weight: bold;
  cursor: pointer;
  margin-bottom: 4px;
  position: relative;
}

.highlight-content details[open] summary:after {
  content: "▲";
  position: absolute;
  right: -18px;
}

.highlight-content details summary:after {
  content: "▼";
  position: absolute;
  right: -18px;
}

.text-light .highlight-content {
  color: #fff;
}

.text-dark .highlight-content {
  color: #000;
}

.highlight-image img {
  max-height: 120px;
  border-radius: 8px;
}

@media (max-width: 768px) {
  .section-product-highlight {
    flex-direction: column;
    text-align: center;
  }

  .highlight-image img {
    margin-top: 16px;
  }
}
{% endstyle %}

<div 
  class="highlight-container {% if section.settings.image_position == 'left' %}highlight-left{% else %}highlight-right{% endif %} {% if section.settings.text_color_mode == 'light' %}text-light{% else %}text-dark{% endif %}"
  style="background-color: {{ section.settings.background_color }};"
>
  <div class="section-product-highlight">
    <div class="highlight-content">
      <h3>{{ section.settings.product_title }}</h3>
      <details>
        <summary>Mehr erfahren</summary>
        <p>{{ section.settings.product_description }}</p>
      </details>
    </div>
    {% if section.settings.product_image %}
      <div class="highlight-image">
        <img src="{{ section.settings.product_image | image_url: width: 300 }}" alt="Produktbild">
      </div>
    {% endif %}
  </div>
</div>