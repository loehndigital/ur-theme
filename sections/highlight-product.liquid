{% style %}
  .section-product-highlight {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 24px;
    border-radius: 16px;
    padding: 0 24px;
    margin: 0 auto;
    max-width: 1200px;
  }

  .product-highlight-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .highlight-left {
    flex-direction: row;
  }

  .highlight-right {
    flex-direction: row-reverse;
  }

  .highlight-content h3 {
    margin: 0;
  }

  summary {
    list-style: none;
    cursor: pointer;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  summary::after {
    content: "â–¼";
    font-size: 12px;
  }

  details[open] summary::after {
    transform: rotate(180deg);
  }

  .highlight-image img {
    max-height: 120px;
    border-radius: 10px;
  }

  @media (max-width: 768px) {
    .section-product-highlight {
      flex-direction: column;
      text-align: center;
    }

    .product-highlight-inner {
      flex-direction: column;
    }

    .highlight-image {
      margin-top: 16px;
    }
  }

  .text-light .highlight-content h3,
  .text-light .highlight-content summary,
  .text-light .highlight-content p {
    color: #fff;
  }

  .text-dark .highlight-content h3,
  .text-dark .highlight-content summary,
  .text-dark .highlight-content p {
    color: #000;
  }
{% endstyle %}

{% assign layout_class = section.settings.image_position %}
{% assign text_class = section.settings.text_color_mode %}

<div
  class="section-product-highlight {{ layout_class }} {% if text_class == 'light' %}text-light{% else %}text-dark{% endif %}"
  style="background-color: {{ section.settings.background_color }}; padding-top: {{ section.settings.padding_vertical }}px; padding-bottom: {{ section.settings.padding_vertical }}px;"
>
  <div class="product-highlight-inner {{ layout_class }}">
    <div class="highlight-content">
      <h3>{{ section.settings.product_title }}</h3>
      <details>
        <summary>Mehr erfahren</summary>
        <p>{{ section.settings.product_description }}</p>
      </details>
    </div>
    {% if section.settings.product_image %}
      <div class="highlight-image">
        <img src="{{ section.settings.product_image | img_url: 'medium' }}" alt="{{ section.settings.product_title }}">
      </div>
    {% endif %}
  </div>
</div>