{% style %}
.vergleichstabelle-section {
  padding: 60px 0;
  background-color: {{ section.settings.bg_color }};
}
.vergleichstabelle {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  text-align: center;
  gap: 30px;
}
.vergleichstabelle-header img {
  max-width: 80px;
  margin-bottom: 10px;
}
.vergleichstabelle-row {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  padding: 15px 0;
  align-items: center;
  background-color: transparent;
}
.vergleichstabelle-row:nth-child(even) {
  background-color: {{ section.settings.row_bg_color }};
}
.vergleichstabelle-col {
  font-size: 16px;
  padding: 0 10px;
}
.vergleichstabelle-col.icon {
  font-size: 20px;
}
.icon-true {
  color: #007a4c;
}
.icon-false {
  color: #d83c3c;
}
@media screen and (max-width: 768px) {
  .vergleichstabelle {
    display: block;
  }
  .vergleichstabelle-header {
    display: flex;
    justify-content: space-around;
    margin-bottom: 20px;
  }
  .vergleichstabelle-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    text-align: left;
    padding: 10px 0;
  }
  .vergleichstabelle-col.title {
    grid-column: span 2;
    font-weight: bold;
    margin-bottom: 5px;
  }
}
{% endstyle %}

<section class="vergleichstabelle-section">
  <div class="page-width">
    <h2 class="h1" style="text-align: {{ section.settings.heading_alignment }}; font-size: {{ section.settings.heading_size }}px;">
      {{ section.settings.heading_text }}
    </h2>

    <div class="vergleichstabelle-header">
      <div>
        {% if section.settings.image_left %}
          <img src="{{ section.settings.image_left | image_url }}" alt="{{ section.settings.product_left }}">
        {% endif %}
        <p><strong>{{ section.settings.product_left }}</strong></p>
      </div>
      <div></div>
      <div>
        {% if section.settings.image_right %}
          <img src="{{ section.settings.image_right | image_url }}" alt="{{ section.settings.product_right }}">
        {% endif %}
        <p><strong>{{ section.settings.product_right }}</strong></p>
      </div>
    </div>

    {% for block in section.blocks %}
      <div class="vergleichstabelle-row">
        <div class="vergleichstabelle-col icon">
          {% if block.settings.icon_left %}<span class="icon-true">✔</span>{% else %}<span class="icon-false">✘</span>{% endif %}
        </div>
        <div class="vergleichstabelle-col title">{{ block.settings.text }}</div>
        <div class="vergleichstabelle-col icon">
          {% if block.settings.icon_right %}<span class="icon-true">✔</span>{% else %}<span class="icon-false">✘</span>{% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Vergleichstabelle NEW",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Überschrift",
      "default": "Was unser Futter besonders macht"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Ausrichtung der Überschrift",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "center", "label": "Zentriert" },
        { "value": "right", "label": "Rechts" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Größe der Überschrift",
      "min": 16,
      "max": 48,
      "step": 1,
      "default": 28
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Bild links"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Bild rechts"
    },
    {
      "type": "text",
      "id": "product_left",
      "label": "Produktname links",
      "default": "Uncle Rusty's"
    },
    {
      "type": "text",
      "id": "product_right",
      "label": "Produktname rechts",
      "default": "Herkömmliches Futter"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe der Sektion",
      "default": "#FEFDF7"
    },
    {
      "type": "color",
      "id": "row_bg_color",
      "label": "Hintergrundfarbe (abwechselnde Zeilen)",
      "default": "#FCF0E5"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Vergleichspunkt",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Vergleichspunkt (Beschreibung)"
        },
        {
          "type": "checkbox",
          "id": "icon_left",
          "label": "Haken links",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "icon_right",
          "label": "Haken rechts",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vergleichstabelle NEW",
      "category": "Custom"
    }
  ]
}
{% endschema %}
