{% schema %}
{
  "name": "Vergleich",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Was unser Futter besonders macht"
    },
    {
      "type": "image_picker",
      "id": "img_left",
      "label": "Bild links"
    },
    {
      "type": "image_picker",
      "id": "img_right",
      "label": "Bild rechts"
    },
    {
      "type": "text",
      "id": "label_left",
      "label": "Produktname links",
      "default": "Uncle Rusty's"
    },
    {
      "type": "text",
      "id": "label_right",
      "label": "Produktname rechts",
      "default": "Herkömmliches Futter"
    },
    {
      "type": "color",
      "id": "row_bg_color",
      "label": "Hintergrundfarbe (abwechselnde Zeilen)",
      "default": "#FCF0E5"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe der Sektion",
      "default": "#FEFDF7"
    }
  ],
  "blocks": [
    {
      "type": "point",
      "name": "Vergleichspunkt",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Vergleichspunkt (Beschreibung)"
        },
        {
          "type": "checkbox",
          "id": "left_check",
          "label": "Haken links",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "right_check",
          "label": "Haken rechts",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vergleich",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% stylesheet %}
<style>
.vergleichstabelle {
  background-color: {{ section.settings.bg_color }};
  padding: 40px 20px;
}

.vergleichstabelle h2 {
  text-align: center;
  font-size: 28px;
  margin-bottom: 30px;
}

.vergleichstabelle-table {
  width: 100%;
  border-collapse: collapse;
}

.vergleichstabelle-table th,
.vergleichstabelle-table td {
  padding: 14px;
  text-align: center;
}

.vergleichstabelle-table tbody tr:nth-child(even) {
  background-color: {{ section.settings.row_bg_color }};
  border-radius: 12px;
}

.vergleichstabelle-table td:first-child,
.vergleichstabelle-table td:last-child {
  width: 20%;
}

.vergleichstabelle-table .label {
  font-weight: bold;
  font-size: 16px;
  margin-top: 10px;
}

@media (max-width: 768px) {
  .vergleichstabelle-table td,
  .vergleichstabelle-table th {
    font-size: 14px;
    padding: 10px;
  }
}
</style>
{% endstylesheet %}

<div class="vergleichstabelle">
  <h2>{{ section.settings.heading }}</h2>

  <table class="vergleichstabelle-table">
    <thead>
      <tr>
        <th>
          {% if section.settings.img_left != blank %}
            <img src="{{ section.settings.img_left | image_url: width: 100 }}" alt="{{ section.settings.label_left }}" style="max-width: 80px;"><br>
          {% endif %}
          <span class="label">{{ section.settings.label_left }}</span>
        </th>
        <th></th>
        <th>
          {% if section.settings.img_right != blank %}
            <img src="{{ section.settings.img_right | image_url: width: 100 }}" alt="{{ section.settings.label_right }}" style="max-width: 80px;"><br>
          {% endif %}
          <span class="label">{{ section.settings.label_right }}</span>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for block in section.blocks %}
        <tr>
          <td>{% if block.settings.left_check %}✔️{% endif %}</td>
          <td>{{ block.settings.text }}</td>
          <td>{% if block.settings.right_check %}✔️{% endif %}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</div>