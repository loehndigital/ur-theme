<style>
.vergleichstabelle {
  width: 100%;
  display: table;
  border-spacing: 0 10px;
}

.vergleichstabelle-row {
  display: table-row;
  background-color: #fff;
  border-radius: 12px;
  overflow: hidden;
}

.vergleichstabelle-header {
  font-weight: bold;
  font-size: 24px;
  text-align: center;
  padding: 20px 0;
}

.vergleichstabelle-cell {
  display: table-cell;
  padding: 12px 16px;
  vertical-align: middle;
  text-align: center;
}

.vergleichstabelle-row:nth-child(even) {
  background-color: {{ settings.row_bg_color }};
  border-radius: 12px;
}

.vergleichstabelle-cell:first-child {
  text-align: left;
}

.vergleichstabelle-check {
  color: #2F855A;
  font-size: 20px;
}

.vergleichstabelle-cross {
  color: #E53E3E;
  font-size: 20px;
}

.vergleichstabelle-images {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0 auto 24px;
  max-width: 400px;
}

.vergleichstabelle-images img {
  max-width: 80px;
  height: auto;
}

@media screen and (max-width: 768px) {
  .vergleichstabelle {
    display: block;
  }
  .vergleichstabelle-row,
  .vergleichstabelle-cell {
    display: block;
    width: 100%;
  }
  .vergleichstabelle-images {
    flex-direction: row;
    gap: 24px;
  }
}
</style>

<div class="vergleichstabelle-wrapper" style="background-color: {{ settings.bg_color }}; padding: 40px 0;">
  <div class="vergleichstabelle-header">{{ settings.heading_text }}</div>

  <div class="vergleichstabelle-images">
    <div>
      {% if settings.image_left != blank %}
        <img src="{{ settings.image_left | img_url: '150x' }}" alt="{{ settings.productname_left }}">
        <div style="text-align: center;">{{ settings.productname_left }}</div>
      {% endif %}
    </div>
    <div>
      {% if settings.image_right != blank %}
        <img src="{{ settings.image_right | img_url: '150x' }}" alt="{{ settings.productname_right }}">
        <div style="text-align: center;">{{ settings.productname_right }}</div>
      {% endif %}
    </div>
  </div>

  <div class="vergleichstabelle">
    {% for block in section.blocks %}
      <div class="vergleichstabelle-row">
        <div class="vergleichstabelle-cell">{{ block.settings.text_label }}</div>
        <div class="vergleichstabelle-cell">
          {% if block.settings.icon_left %}
            <span class="vergleichstabelle-check">✔</span>
          {% else %}
            <span class="vergleichstabelle-cross">✘</span>
          {% endif %}
        </div>
        <div class="vergleichstabelle-cell">
          {% if block.settings.icon_right %}
            <span class="vergleichstabelle-check">✔</span>
          {% else %}
            <span class="vergleichstabelle-cross">✘</span>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Vergleich Rusty",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Überschrift",
      "default": "Was unser Futter besonders macht"
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Bild links"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Bild rechts"
    },
    {
      "type": "text",
      "id": "productname_left",
      "label": "Produktname links",
      "default": "Uncle Rusty's"
    },
    {
      "type": "text",
      "id": "productname_right",
      "label": "Produktname rechts",
      "default": "Herkömmliches Futter"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe der Sektion",
      "default": "#FEFDF7"
    },
    {
      "type": "color",
      "id": "row_bg_color",
      "label": "Hintergrundfarbe (abwechselnde Zeilen)",
      "default": "#FCF0E5"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Vergleichspunkt",
      "settings": [
        {
          "type": "text",
          "id": "text_label",
          "label": "Vergleichspunkt (Beschreibung)"
        },
        {
          "type": "checkbox",
          "id": "icon_left",
          "label": "Haken links",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "icon_right",
          "label": "Haken rechts",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vergleich Rusty",
      "category": "Custom"
    }
  ]
}
{% endschema %}