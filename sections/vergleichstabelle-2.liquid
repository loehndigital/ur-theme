{% style %}
.vergleichstabelle-jr {
  width: 100%;
  padding: 3rem 1rem;
  background-color: {{ section.settings.bg_color }};
}
.vergleichstabelle-jr h2 {
  text-align: {{ section.settings.heading_alignment }};
  font-size: {{ section.settings.heading_size }}px;
  margin-bottom: 2rem;
}
.vergleichstabelle-jr .tabelle {
  width: 100%;
  border-spacing: 0;
  border-collapse: collapse;
}
.vergleichstabelle-jr .tabelle thead {
  position: sticky;
  top: 0;
  background-color: {{ section.settings.bg_color }};
  z-index: 10;
}
.vergleichstabelle-jr .tabelle th,
.vergleichstabelle-jr .tabelle td {
  text-align: center;
  padding: 1rem;
  font-size: 1rem;
}
.vergleichstabelle-jr .tabelle th:first-child,
.vergleichstabelle-jr .tabelle td:first-child {
  text-align: left;
}
.vergleichstabelle-jr .row-alt {
  background-color: {{ section.settings.row_bg_color }};
}
.vergleichstabelle-jr .icon-check {
  color: #0f834c;
  font-size: 20px;
}
.vergleichstabelle-jr .icon-x {
  color: #d93025;
  font-size: 20px;
}
.vergleichstabelle-jr img {
  max-height: 60px;
  object-fit: contain;
}
@media screen and (max-width: 768px) {
  .vergleichstabelle-jr .tabelle th,
  .vergleichstabelle-jr .tabelle td {
    font-size: 0.9rem;
    padding: 0.5rem;
  }
}
{% endstyle %}

<section class="vergleichstabelle-jr">
  <h2>{{ section.settings.heading_text }}</h2>

  <table class="tabelle">
    <thead>
      <tr>
        <th></th>
        <th>
          {% if section.settings.image_left != blank %}
            <img src="{{ section.settings.image_left | image_url: width: 100 }}" alt="Produkt links">
          {% endif %}
          <div>{{ section.settings.productname_left }}</div>
        </th>
        <th>
          {% if section.settings.image_right != blank %}
            <img src="{{ section.settings.image_right | image_url: width: 100 }}" alt="Produkt rechts">
          {% endif %}
          <div>{{ section.settings.productname_right }}</div>
        </th>
      </tr>
    </thead>
    <tbody>
      {% for block in section.blocks %}
        <tr class="{% cycle '', 'row-alt' %}">
          <td>{{ block.settings.text_label }}</td>
          <td>{% if block.settings.icon_left %}<span class="icon-check">✔</span>{% else %}<span class="icon-x">✘</span>{% endif %}</td>
          <td>{% if block.settings.icon_right %}<span class="icon-check">✔</span>{% else %}<span class="icon-x">✘</span>{% endif %}</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
</section>

{% schema %}
{
  "name": "Vergleichstabelle JR",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Überschrift",
      "default": "Was unser Futter besonders macht"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Ausrichtung der Überschrift",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "center", "label": "Zentriert" },
        { "value": "right", "label": "Rechts" }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Größe der Überschrift",
      "min": 18,
      "max": 48,
      "step": 1,
      "default": 28
    },
    {
      "type": "image_picker",
      "id": "image_left",
      "label": "Bild links"
    },
    {
      "type": "image_picker",
      "id": "image_right",
      "label": "Bild rechts"
    },
    {
      "type": "text",
      "id": "productname_left",
      "label": "Produktname links",
      "default": "Uncle Rusty's"
    },
    {
      "type": "text",
      "id": "productname_right",
      "label": "Produktname rechts",
      "default": "Herkömmliches Futter"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe der Sektion",
      "default": "#FEFDF7"
    },
    {
      "type": "color",
      "id": "row_bg_color",
      "label": "Hintergrundfarbe (abwechselnde Zeilen)",
      "default": "#FCF0E5"
    }
  ],
  "blocks": [
    {
      "type": "row",
      "name": "Vergleichspunkt",
      "settings": [
        {
          "type": "text",
          "id": "text_label",
          "label": "Vergleichspunkt (Beschreibung)"
        },
        {
          "type": "checkbox",
          "id": "icon_left",
          "label": "Haken links",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "icon_right",
          "label": "Haken rechts",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vergleichstabelle JR",
      "category": "Custom"
    }
  ]
}
{% endschema %}