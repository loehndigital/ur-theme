{% schema %}
{
  "name": "Uncle Rusty ULTRA PRO V5",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Produktbild" },
        { "type": "text", "id": "title", "label": "Titel" },
        { "type": "text", "id": "usp1", "label": "USP 1" },
        { "type": "text", "id": "usp2", "label": "USP 2" },
        { "type": "text", "id": "usp3", "label": "USP 3" },
        { "type": "text", "id": "usp4", "label": "USP 4" },
        { "type": "url", "id": "product_link", "label": "Produktlink" },
        { "type": "textarea", "id": "zusammensetzung", "label": "Zusammensetzung" },
        { "type": "textarea", "id": "vitamine", "label": "Vitamine & Spurenelemente" }
      ]
    }
  ],
  "presets": [
    { "name": "Uncle Rusty ULTRA PRO V5" }
  ]
}
{% endschema %}

<div class="uncle-rusty-ultra-pro-v5">
  <div class="swiper rustySwiper">
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="slide-card">
            <div class="slide-image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | img_url: '500x500' }}" alt="{{ block.settings.title }}">
              {% endif %}
            </div>
            <div class="slide-content">
              <h3>{{ block.settings.title }}</h3>
              <ul>
                {% if block.settings.usp1 %}<li>{{ block.settings.usp1 }}</li>{% endif %}
                {% if block.settings.usp2 %}<li>{{ block.settings.usp2 }}</li>{% endif %}
                {% if block.settings.usp3 %}<li>{{ block.settings.usp3 }}</li>{% endif %}
                {% if block.settings.usp4 %}<li>{{ block.settings.usp4 }}</li>{% endif %}
              </ul>
              {% if block.settings.product_link %}
                <a href="{{ block.settings.product_link }}" class="product-button">Zum Produkt</a>
              {% endif %}
              {% if block.settings.zusammensetzung %}
              <details><summary>Zusammensetzung</summary><p>{{ block.settings.zusammensetzung }}</p></details>
              {% endif %}
              {% if block.settings.vitamine %}
              <details><summary>Vitamine & Spurenelemente</summary><p>{{ block.settings.vitamine }}</p></details>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Optional Navigation -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
  </div>

  <!-- Swiper CSS + JS via CDN -->
  <link rel="stylesheet" href="https://unpkg.com/swiper@9/swiper-bundle.min.css" />
  <script src="https://unpkg.com/swiper@9/swiper-bundle.min.js"></script>

  <style>
    .uncle-rusty-ultra-pro-v5 {
      padding: 60px 20px;
      background: #faf6eb;
      max-width: 1440px;
      margin: 0 auto;
      overflow: hidden;
    }
    .swiper-wrapper {
      display: flex;
      align-items: stretch;
    }
    .swiper-slide {
      width: auto !important;
    }
    .slide-card {
      width: 320px;
      background: #fff;
      border-radius: 20px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
      padding: 20px;
      display: flex;
      flex-direction: column;
      height: 100%;
    }
    .slide-image img {
      width: 100%;
      height: auto;
    }
    .slide-content h3 {
      font-size: 18px;
      font-weight: 600;
      margin: 15px 0;
      text-align: center;
    }
    .slide-content ul {
      list-style: none;
      padding: 0;
      margin: 0 0 15px 0;
      text-align: center;
    }
    .slide-content ul li::before {
      content: 'âœ” ';
    }
    .product-button {
      display: block;
      background: #000;
      color: #fff;
      padding: 14px 30px;
      border-radius: 50px;
      text-decoration: none;
      margin: 20px auto;
      text-align: center;
      font-weight: 600;
    }
    details summary {
      font-weight: 600;
      cursor: pointer;
      margin-top: 12px;
      text-align: center;
    }
    .swiper-button-next, .swiper-button-prev {
      color: #000;
    }
  </style>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      new Swiper('.rustySwiper', {
        loop: true,
        speed: 600,
        slidesPerView: 'auto',
        spaceBetween: 30,
        centeredSlides: false,
        grabCursor: true,
        autoplay: {
          delay: 3500,
          disableOnInteraction: false
        },
        navigation: {
          nextEl: '.swiper-button-next',
          prevEl: '.swiper-button-prev'
        },
        breakpoints: {
          768: { spaceBetween: 40 },
          1024: { spaceBetween: 50 }
        }
      });
    });
  </script>
</div>