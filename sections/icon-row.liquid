                  {% render 'icon-youtube' %}
                {% when 'icon-zoom' %}
                  {% render 'icon-zoom' %}
                {%- else -%}
                  <!-- Default action if no icon matches -->
                  <p>No Icon Selected</p>
              {% endcase %}
            </div>
            <div class='icon-description xtext-center'>
              {{ block.settings.icon_rich_text }}
            </div>
          </div>
        {% when 'image-text-block' %}
          <div class='icon-text-block xflex xflex-col xjustify-center' {{ block.shopify_attributes }}>
            <div class='image xtext-center' style="margin-bottom: 2rem;">
              {%- if block.settings.image != blank -%}
                <img 
                  src="{{ block.settings.image | image_url: width: 350 }}"
                  alt=""
                  loading="lazy"
                  class="mx-auto"
                  style="max-height: {{ block.settings.image_height }}px; object-fit: contain;"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              {%- else -%}
                {{ "image" | placeholder_svg_tag: "placeholder-svg xw-24 xh-24 mx-auto" }}
              {%- endif -%}
            </div>
            <div class='icon-description xtext-center'>
              {{ block.settings.image_rich_text }}
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</section>

