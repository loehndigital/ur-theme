<!-- sections/feature-list.liquid -->
<div class="bg-gray-100 py-10 px-4 md:px-8 lg:px-16">
  <h2 class="text-center font-semibold text-2xl mb-8">Gemacht für alle, die Ernährung ernst nehmen.</h2>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8">
    {% for block in section.blocks %}
      <div class="flex items-center gap-4">
        <div class="w-8 h-8">
          {{ block.settings.icon_svg | raw }}
        </div>
        <span>{{ block.settings.text }}</span>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Features Tabelle",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "textarea",
          "id": "icon_svg",
          "label": "SVG Icon",
          "default": "<svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke='currentColor'><path stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='M5 13l4 4L19 7'/></svg>"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Feature Text",
          "default": "Hochwertiges Fleisch aus regionaler Haltung"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Tabelle",
      "category": "Text"
    }
  ]
}
{% endschema %}

