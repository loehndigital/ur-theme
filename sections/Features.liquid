.page-width {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 20px;
}
.bg-gray-50 {
  background-color: #f9fafb;
}
.grid {
  display: grid;
}
@media (min-width: 768px) {
  .md\:grid-cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }
}
.gap-y-4 {
  row-gap: 1rem;
}
.gap-x-8 {
  column-gap: 2rem;
}
.text-center {
  text-align: center;
}
.font-semibold {
  font-weight: 600;
}
.mb-8 {
  margin-bottom: 2rem;
}
.flex {
  display: flex;
}
.items-center {
  align-items: center;
}
.text-gray-800 {
  color: #374151;
}
.text-2xl {
  font-size: 1.5rem;
}
{% endstylesheet %}

