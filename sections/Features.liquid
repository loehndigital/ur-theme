{% schema %}
{
  "name": "Features Tabelle",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Gemacht für Hunde, die Qualität lieben."
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Vollbreite aktivieren",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "custom_bg",
      "label": "Hintergrundfarbe aktivieren",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe wählen",
      "default": "#f5f5f5"
    },
    {
      "type": "checkbox",
      "id": "rounded_box",
      "label": "Abgerundeter Kasten (wie unten)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "boxed_content",
      "label": "Inhalt in weiße Box setzen (wie Headline)",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "center_content",
      "label": "Inhalte im Container zentrieren",
      "default": false
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Padding oben/unten",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 10
    },
    {
      "type": "range",
      "id": "inner_padding_x",
      "label": "Innenabstand links/rechts",
      "default": 20,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "text_max_width",
      "label": "Maximale Breite des Inhalts (px)",
      "default": 1000,
      "min": 400,
      "max": 1400,
      "step": 50
    },
    {
      "type": "select",
      "id": "text_align_desktop",
      "label": "Textausrichtung (Desktop)",
      "default": "left",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "center", "label": "Zentriert" },
        { "value": "right", "label": "Rechts" }
      ]
    },
    {
      "type": "select",
      "id": "text_align_mobile",
      "label": "Textausrichtung (Mobil)",
      "default": "left",
      "options": [
        { "value": "left", "label": "Links" },
        { "value": "center", "label": "Zentriert" },
        { "value": "right", "label": "Rechts" }
      ]
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "SVG Icon (HTML)",
          "default": "<svg width='24' height='24' xmlns='http://www.w3.org/2000/svg'><circle cx='12' cy='12' r='10' stroke='#000' fill='none'/></svg>"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Beschreibung",
          "default": "Feature Beschreibung hier"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Tabelle",
      "category": "Text",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

<div
  class="
    features-wrapper
    {% if section.settings.full_width %} full-width{% endif %}
    {% if section.settings.rounded_box %} rounded{% endif %}
    {% if section.settings.boxed_content %} has-box{% endif %}
    align-desktop-{{ section.settings.text_align_desktop }}
    align-mobile-{{ section.settings.text_align_mobile }}"
  style="
    background-color: {% if section.settings.custom_bg %}{{ section.settings.bg_color }}{% else %}transparent{% endif %};
    padding-top: {{ section.settings.section_padding }}px;
    padding-bottom: {{ section.settings.section_padding }}px;
  "
>
  <div class="features-container{% if section.settings.center_content %} center-content{% endif %}" style="
    max-width: {{ section.settings.text_max_width }}px;
    padding-left: {{ section.settings.inner_padding_x }}px;
    padding-right: {{ section.settings.inner_padding_x }}px;
  ">
    <div class="features-inner{% if section.settings.boxed_content %} boxed-content{% endif %}">
      <h2 class="features-heading">{{ section.settings.heading }}</h2>
      <div class="features-grid">
        {% for block in section.blocks %}
          <div class="feature-item">
            <div class="feature-icon">
              {{ block.settings.icon_svg }}
            </div>
            <div class="feature-text">
              {{ block.settings.text }}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<style>
.features-wrapper {
  font-family: Helvetica, Arial, sans-serif;
}

.features-wrapper.rounded {
  border-radius: 20px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
}

.features-wrapper.full-width .features-container {
  max-width: none;
  width: 100%;
}

.features-container.center-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.features-inner.boxed-content {
  background-color: white;
  border-radius: 20px;
  padding: 30px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
}

.features-heading {
  font-size: 26px;
  font-weight: 500;
  margin-bottom: 40px;
}

/* Grid layout */
.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px 40px;
}

/* Items */
.feature-item {
  display: flex;
  align-items: center;
}

/* Icon */
.feature-icon svg {
  width: 28px;
  height: 28px;
  margin-right: 15px;
  fill: currentColor;
  color: #333;
}

/* Text */
.feature-text {
  font-size: 16px;
  color: #333;
}

/* Responsive */
@media (max-width: 768px) {
  .features-grid {
    grid-template-columns: 1fr;
  }
  .features-wrapper.align-mobile-center .features-container {
    text-align: center;
  }
  .features-wrapper.align-mobile-left .features-container {
    text-align: left;
  }
  .features-wrapper.align-mobile-right .features-container {
    text-align: right;
  }
}

@media (min-width: 769px) {
  .features-wrapper.align-desktop-center .features-container {
    text-align: center;
  }
  .features-wrapper.align-desktop-left .features-container {
    text-align: left;
  }
  .features-wrapper.align-desktop-right .features-container {
    text-align: right;
  }
}
</style>