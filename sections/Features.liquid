{% schema %}
{
  "name": "Features Tabelle",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Gemacht für Hunde, die Qualität lieben."
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Vollbreite aktivieren",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "custom_bg",
      "label": "Hintergrundfarbe aktivieren",
      "default": true
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Hintergrundfarbe wählen",
      "default": "#f5f5f5"
    },
    {
      "type": "checkbox",
      "id": "rounded_box",
      "label": "Abgerundeter Kasten (wie unten)",
      "default": false
    },
    {
      "type": "range",
      "id": "section_padding",
      "label": "Innenabstand (Padding oben/unten)",
      "default": 50,
      "min": 0,
      "max": 100,
      "step": 10
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "SVG Icon (HTML)",
          "default": "<svg width='24' height='24' xmlns='http://www.w3.org/2000/svg'><circle cx='12' cy='12' r='10' stroke='#000' fill='none'/></svg>"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Beschreibung",
          "default": "Feature Beschreibung hier"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Tabelle",
      "category": "Text",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}

<div
  class="features-wrapper {% if section.settings.full_width %}full-width{% endif %} {% if section.settings.rounded_box %}rounded{% endif %}"
  style="
    {% if section.settings.custom_bg %}
      background-color: {{ section.settings.bg_color }};
    {% else %}
      background-color: transparent;
    {% endif %}
    padding-top: {{ section.settings.section_padding }}px;
    padding-bottom: {{ section.settings.section_padding }}px;
  "
>
  <div class="features-container">
    <h2 class="features-heading">{{ section.settings.heading }}</h2>
    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-item">
          <div class="feature-icon">
            {{ block.settings.icon_svg }}
          </div>
          <div class="feature-text">
            {{ block.settings.text }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.features-wrapper {
  font-family: Helvetica, Arial, sans-serif;
}

.features-wrapper.rounded {
  border-radius: 20px;
  box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
}

.features-wrapper.full-width .features-container {
  max-width: none;
  width: 100%;
  padding: 0 20px;
}

.features-container {
  max-width: 1000px;
  margin: 0 auto;
}

.features-heading {
  font-size: 26px;
  font-weight: 500;
  text-align: center;
  margin-bottom: 40px;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20px 40px;
}

.feature-item {
  display: flex;
  align-items: center;
}

.feature-icon svg {
  width: 28px;
  height: 28px;
  margin-right: 15px;
  fill: currentColor;
  color: #333;
}

.feature-text {
  font-size: 16px;
  color: #333;
}

@media (max-width: 600px) {
  .features-grid {
    grid-template-columns: 1fr;
  }
}
</style>