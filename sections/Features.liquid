{% schema %}
{
  "name": "Features Tabelle",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Gemacht für alle, die Qualität ernst nehmen."
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Emoji oder SVG HTML)",
          "default": "✅"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Beschreibung",
          "default": "Beschreibung des Features hier eingeben"
